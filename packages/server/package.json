{
  "name": "@torrin-kit/server",
  "version": "0.8.0",
  "description": "Core server logic for Torrin upload engine",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@torrin-kit/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0"
  },
  "sideEffects": false,
  "license": "Apache-2.0",
  "author": "Dimas Maulana",
  "repository": {
    "type": "git",
    "url": "https://github.com/dev-dimas/torrin.git"
  },
  "homepage": "https://github.com/dev-dimas/torrin/tree/main/packages/server#readme",
  "keywords": [
    "torrin",
    "server",
    "upload",
    "file-upload",
    "resumable",
    "typescript"
  ]
}
